{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "env": ["NODE_ENV", "DATABASE_URL", "VITE_API_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "DATABASE_URL", "VITE_API_URL", "PORT"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "DATABASE_URL", "PORT"]
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "outputs": [],
      "cache": false
    },
    "typecheck": {
      "outputs": [],
      "cache": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": true,
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "test:unit": {
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:integration": {
      "outputs": ["coverage/**"],
      "cache": false,
      "env": ["DATABASE_URL", "REDIS_URL"]
    },
    "test:e2e": {
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": false,
      "dependsOn": ["build"],
      "env": ["BASE_URL", "API_URL"]
    },
    "test:coverage": {
      "outputs": ["coverage/**", "lcov.info"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:migrate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "prisma:seed": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "prisma:studio": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    }
  }
}
