{
  "name": "dashboard-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise-grade dynamic dashboard with REST API and React frontend",
  "author": "Tech Lead Candidate",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:api": "pnpm --filter @dashboard/api dev",
    "dev:web": "pnpm --filter @dashboard/web dev",
    "build": "turbo run build",
    "build:api": "pnpm --filter @dashboard/api build",
    "build:web": "pnpm --filter @dashboard/web build",
    "start": "turbo run start",
    "start:api": "pnpm --filter @dashboard/api start",
    "start:web": "pnpm --filter @dashboard/web start",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,yml,yaml}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rimraf node_modules",
    "db:up": "docker-compose up -d mysql redis",
    "db:down": "docker-compose down",
    "db:migrate": "pnpm --filter @dashboard/api prisma:migrate",
    "db:seed": "pnpm --filter @dashboard/api prisma:seed",
    "db:studio": "pnpm --filter @dashboard/api prisma:studio",
    "db:reset": "pnpm --filter @dashboard/api prisma:reset",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "audit:fix": "pnpm audit --fix",
    "deps:update": "pnpm update -r --interactive",
    "deps:check": "pnpm outdated -r",
    "ci": "run-s format:check lint typecheck test:coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
